aspect Caching {

  interface CacheRoot { 
    void flushCaches();
  }

  CompilationUnit implements CacheRoot;
  Program implements CacheRoot;

  public void CompilationUnit.invalidate() {
    flushCaches();
    Main.last_change++;
  }

  public void Program.invalidate() {
    flushCaches();
    Main.last_change++;
  }

  public ASTNode ASTNode.getCacheRoot() {
    ASTNode n = this;
    while(n != null && !(n instanceof CacheRoot))
      n = n.parent;
    return n;
  }
}