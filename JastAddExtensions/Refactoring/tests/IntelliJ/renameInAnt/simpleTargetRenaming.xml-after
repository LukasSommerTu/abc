<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="UnitTest" default="jar-new-plugin" basedir=".">
   <property name="idea.home" value="c:/java/intellij"/>
   <property name="pluginName" value="unitTest"/>
   <property name="project.path" value="."/>
   <property name="build.path" value="${project.path}/classes"/>
   <property name="plugin.dir" value="${idea.home}/plugins"/>
   <property name="version" value="0.5"/>

   <target name="jar-new-plugin">
     <property name="p" value="${plugin.dir}/${pluginName}/lib/"/>
      <jar jarfile="${plugin.dir}/${pluginName}/lib/${pluginName}.jar" basedir="${build.path}" manifest="MANIFEST.MF" >
        <exclude name=".dependency-info"/>
        <exclude name="com/intellij"/>
      </jar>
   </target>
   <target name="qqq" depends="jar-new-plugin, jar-new-plugin"></target>
   <target name="bbb" depends="jar-new-plugin,jar-new-plugin"></target>
   <target name="zzz" depends="qqq, jar-new-plugin"></target>
   <target name="yyy" depends="jar-new-plugin"/>
</project>