/*
 * a scope is something where we can look up variables
 */

aspect Scope {
	
	interface Scope {
		SimpleSet lookupVariable(String name);
		SimpleSet lookupType(String name);
		TypeDecl surroundingType();
	}
	
	Expr implements Scope;
	BodyDecl implements Scope;
	
	public TypeDecl Expr.surroundingType() { return hostType(); }
	public TypeDecl BodyDecl.surroundingType() { return hostType(); }
	
}